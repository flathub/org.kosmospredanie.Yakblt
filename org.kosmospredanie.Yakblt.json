{
	"app-id": "org.kosmospredanie.Yakblt",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "21.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "org.kosmospredanie.Yakblt",
	"finish-args": [
		"--share=ipc",
		"--socket=x11",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/lib/cmake",
		"/lib/debug",
		"/share/gir-1.0",
		"/lib/girepository-1.0"
	],
	"modules": [
		"shared-modules/gudev/gudev.json",
		{
			"name": "sfml",
			"buildsystem": "cmake-ninja",
			"config-opts": [
				"-DSFML_BUILD_NETWORK=false",
				"-DSFML_PKGCONFIG_DIR=lib/pkgconfig"
			],
			"sources": [{
				"type": "git",
				"url": "https://github.com/SFML/SFML.git",
				"tag": "2.5.1",
				"commit": "2f11710abc5aa478503a7ff3f9e654bd2078ebab"
			}]
		},
		{
			"name": "tgui",
			"buildsystem": "cmake-ninja",
			"sources": [{
				"type": "git",
				"url": "https://github.com/texus/TGUI.git",
				"tag": "v0.8.7"
			}]
		},
		{
			"name": "yakblt",
			"buildsystem": "meson",
			"config-opts": ["--buildtype=release"],
			"sources": [{
				"type": "git",
				"url": "https://gitlab.com/kosmospredanie/yakblt.git",
				"tag": "2020.02.10+1"
			}]
		}
	]
}
